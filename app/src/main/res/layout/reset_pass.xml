<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    
    android:background="@drawable/roundededges">

        
    <TextView
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="15sp"
          android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:paddingLeft="5dp"
        android:text=" Confirmation "
        android:textColor="#000000"/>
    
    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
             android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:background="@color/label_black_color"/>
    
        <TextView
                        android:id="@+id/commentss"
      
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:textSize="15sp"
        android:paddingLeft="15dp"
       
        android:textColor="#000000"/>

     <LinearLayout
         android:id="@+id/compl_profile"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
      android:layout_margin="25dp"
         android:layout_gravity="center"
         android:orientation="horizontal"
         android:weightSum="4" >

         <Button
             
             android:id="@+id/btn_res_cancell"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_gravity="center_horizontal"
             android:layout_weight="2"
             android:padding="2dp"
           	android:layout_marginRight="4dp"
           	android:background="@drawable/btn_selector"
             android:text="Cancel"
             android:textColor="@color/label_white_color"
             android:textSize="15sp" />

         <Button
             
               android:id="@+id/btn_res_okk"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_gravity="center"
             android:layout_weight="2"
             android:padding="2dp"
             android:layout_marginLeft="4dp"
             android:background="@drawable/btn_selector"
             android:text="Confirm"
             android:textColor="@color/label_white_color"
             android:textSize="15sp" />
     </LinearLayout>

</LinearLayout>