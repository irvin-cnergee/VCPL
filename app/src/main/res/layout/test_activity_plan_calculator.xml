<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    
    android:layout_width="match_parent"
    android:layout_height="match_parent">
     <com.braunster.tutorialview.view.TutorialView
        android:layout_width="match_parent"
        android:id="@+id/tutorial_view"
        android:layout_height="match_parent"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.example.myrangebar.PlanCalculatorActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="2dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="1dp"
            android:padding="2dp" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:id="@+id/tv_1_select"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_margin="1dp"
                    android:background="@drawable/number_new"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/label_white_color"
                    android:textSize="10sp" />
                
                 <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_margin="1dp"
                    android:text="TYPE"
                    android:layout_marginLeft="3dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv_1_select"
                    android:textColor="@color/label_white_color"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_margin="1dp"
                    android:text="PLAN CALCULATOR"
                    android:layout_centerVertical="true"
                    android:textColor="@color/label_white_color"
                    android:textSize="10sp" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_selectplan_type"
            android:layout_width="match_parent"
            android:layout_height="40dp"           
            android:padding="4dp"
            android:weightSum="2" >

            <Button
                android:id="@+id/btnFup"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="2dp"
                android:background="@drawable/fup" />

            <Button
                android:id="@+id/btnUnlimited"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="2dp"
                android:background="@drawable/ul" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:orientation="vertical"
            android:weightSum="7" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.65"
                android:background="@drawable/text_editor"
                android:orientation="vertical"
                android:padding="4dp"
                android:weightSum="3" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.5"
                    android:orientation="horizontal" >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >

                       <TextView
                            android:id="@+id/tvHelp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            
                            android:textColor="#dc7e00" />
                    </RelativeLayout>
                </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@drawable/lines" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.75"
                    android:orientation="horizontal" >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:text="MY PLAN"
                            android:textColor="#dc7e00" />

                        <TextView
                            android:id="@+id/tvPlanName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_gravity="right"
                            android:text="PLAN"
                            android:textColor="#dc7e00"
                            android:textSize="15sp" />
                    </RelativeLayout>
                </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@drawable/lines" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.75"
                    android:orientation="horizontal" >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginTop="5dp"
                            android:text="@string/only_rupees_sign"
                            android:textColor="#dc7e00" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/tvDays"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:textColor="#dc7e00"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/tvSpeed"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:textColor="#dc7e00"
                                android:textSize="20sp" />
                            
                            <TextView
                                android:id="@+id/tvData"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:textColor="#dc7e00"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/tvPostSpeed"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:textColor="#dc7e00"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/tvFinalPrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:textColor="#dc7e00"
                                android:textSize="20sp" />
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5.4"
                android:orientation="vertical"
                android:padding="4dp"
                android:weightSum="6" >

                <LinearLayout
                    android:id="@+id/ll_select_days"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.7"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/tv_valid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_margin="1dp"
                            android:background="@drawable/number_new"
                            android:gravity="center"
                            android:text="2"
                            android:textColor="@color/label_white_color" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="1dp"
                            android:layout_toRightOf="@+id/tv_valid"
                            android:text="VALIDITY"
                            android:layout_marginLeft="3dp"
                            android:textColor="@color/label_white_color" />
                    </RelativeLayout>

                    <SeekBar
                        android:id="@+id/seekBar1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/seekbar_1"
                        android:progressDrawable="@android:color/transparent"
                        android:thumb="@drawable/thumb" />

                    <!-- android:progressDrawable="@drawable/seekbar_progress" -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="4" >

                        <LinearLayout
                            android:id="@+id/btn1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/days_button"
                            android:gravity="center" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="30"
                                android:textColor="#ffffff"
                                android:textSize="22sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/btn2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/days_button"
                            android:gravity="center" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="90"
                                android:textColor="#ffffff"
                                android:textSize="22sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/btn3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/days_button"
                            android:gravity="center" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="180"
                                android:textColor="#ffffff"
                                android:textSize="22sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/btn4"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/days_button"
                            android:gravity="center" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="365"
                                android:textColor="#ffffff"
                                android:textSize="22sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2.2"
                    android:orientation="horizontal"
                    android:weightSum="1" >

                    <LinearLayout
                        android:id="@+id/ll_speed_box"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="1dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/number_box"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:weightSum="4" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="0.8"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="1dp" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="1dp"
                                android:background="@drawable/number_new"
                                android:gravity="center"
                                android:text="3"
                                android:textColor="@color/label_white_color" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="1dp"
                                android:gravity="center"
                                android:text="SPEED"
                                android:textColor="#ffffff"
                                android:textSize="12sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="1dp"
                                android:gravity="center"
                                android:text="[Mbps]"
                                android:textColor="#dc7e00"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_gravity="center"
                            android:layout_margin="4dp"
                            android:layout_weight="3.2"
                            android:background="@android:color/transparent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:weightSum="1" >

                            <GridView
                                android:id="@+id/gvSpeed"
                                android:layout_width="fill_parent"
                                android:layout_height="0dp"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:clipChildren="true"
                                android:listSelector="@null"
                                android:numColumns="4"
                                android:smoothScrollbar="true" >
                            </GridView>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_data_transfer_box"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="1dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/number_box"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:weightSum="4" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="0.8"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="1dp" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="1dp"
                                android:background="@drawable/number_new"
                                android:gravity="center"
                                android:text="4"
                                android:textColor="@color/label_white_color" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="1dp"
                                android:gravity="center"
                                android:text="DATA TRANSFER"
                                android:textColor="#ffffff"
                                android:textSize="12sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="1dp"
                                android:gravity="center"
                                android:text="[Gb]"
                                android:textColor="#dc7e00"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_gravity="center"
                            android:layout_margin="4dp"
                            android:layout_weight="3.2"
                            android:background="@android:color/transparent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:weightSum="1" >

                            <GridView
                                android:id="@+id/gvData"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:clipChildren="true"
                                android:listSelector="@null"
                                android:numColumns="4"
                                android:smoothScrollbar="true" >
                            </GridView>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="1dp"
                    android:layout_weight="2.0"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:id="@+id/ll_post_speed_box"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="1dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/number_box"
                        android:orientation="vertical"
                        android:weightSum="4" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="0.8"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="1dp" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="1dp"
                                android:background="@drawable/number_new"
                                android:gravity="center"
                                android:text="5"
                                android:textColor="@color/label_white_color"
                                android:textSize="12sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="1dp"
                                android:gravity="left"
                                android:text="SPEED AFTER VOL"
                                android:textColor="#ffffff"
                                android:textSize="10sp" />
                            
                              <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="1dp"
                                android:gravity="center"
                                android:text="[Mb]"
                                android:textColor="#dc7e00"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_gravity="center"
                            android:layout_margin="4dp"
                            android:layout_weight="3.2"
                            android:background="@android:color/transparent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:weightSum="1" >

                             <GridView
                                android:id="@+id/gvPostSpeed"
                                android:layout_width="fill_parent"
                                android:layout_height="0dp"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:clipChildren="true"
                                android:listSelector="@null"
                                android:numColumns="2"
                                android:smoothScrollbar="true" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="1dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/number_box"
                        android:orientation="vertical"
                        android:weightSum="2" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginLeft="1dp"
                            android:layout_marginRight="1dp"
                            android:layout_marginTop="2dp"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:orientation="horizontal"
                            android:weightSum="1" >

                            <LinearLayout
                                android:id="@+id/ll_section4_1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="1dp"
                                android:layout_marginLeft="2dp"
                                android:layout_marginRight="1dp"
                                android:layout_marginTop="2dp"
                                android:layout_weight="0.5"
                                android:background="@drawable/speed_after_btn"
                                android:gravity="center"
                                android:orientation="vertical" >

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:src="@drawable/c_btn" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_section4_2"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="1dp"
                                android:layout_marginLeft="1dp"
                                android:layout_marginRight="2dp"
                                android:layout_marginTop="2dp"
                                android:layout_weight="0.5"
                                android:background="@drawable/speed_after_btn"
                                android:gravity="center"
                                android:orientation="vertical" >

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:src="@drawable/close_4" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginBottom="2dp"
                            android:layout_marginLeft="1dp"
                            android:layout_marginRight="1dp"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:orientation="horizontal"
                            android:weightSum="1" >

                            <LinearLayout
                                android:id="@+id/ll_section4_3"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="2dp"
                                android:layout_marginLeft="2dp"
                                android:layout_marginRight="1dp"
                                android:layout_marginTop="1dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical" >

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:background="@drawable/calc_pay_now" />
                            </LinearLayout>

                            <!--
                            <LinearLayout
                                android:id="@+id/ll_section4_4"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="2dp"
                                android:layout_marginLeft="1dp"
                                android:layout_marginRight="2dp"
                                android:layout_marginTop="1dp"
                                android:layout_weight="0.5"
                                android:background="@drawable/speed_after_btn"
                                android:gravity="center"
                                android:orientation="vertical" >

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:src="@drawable/renew" />
                            </LinearLayout>
                            -->
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
 
</LinearLayout>

</RelativeLayout>