<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp">

    <LinearLayout
        android:id="@+id/relativepaymenthistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="1">

        <LinearLayout
            android:id="@+id/ll_amount"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/tv_days"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingBottom="@dimen/home_tv_padding_bottom"
                android:paddingLeft="@dimen/home_tv_padding_left"
                android:paddingRight="@dimen/home_tv_padding_right"
                android:paddingTop="@dimen/home_tv_padding_top"
                android:singleLine="true"
                android:text="22222"
                android:textStyle="bold"
                android:textSize="25dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:padding="5dp"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:gravity="left">

            <TextView
                android:id="@+id/tv_pkg_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center"
                android:gravity="left"
                android:padding="2dp"
                android:maxEms="3"
                android:text=""
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_desc"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center"
                android:gravity="left"
                android:maxEms="3"
                android:padding="2dp"
                android:text=""
                android:textStyle="bold"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_validity"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center"
                android:gravity="left"
                android:maxEms="3"
                android:padding="2dp"
                android:text=""
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>
    <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1dp"-->
        <!--android:background="@color/btn_released"-->
        <!--android:layout_margin="4dp"/>-->
    </androidx.cardview.widget.CardView>
</LinearLayout>