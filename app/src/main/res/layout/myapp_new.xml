<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_scrn_myapp"
    android:orientation="vertical" >

    <!-- header starts here -->

    <RelativeLayout
        android:id="@+id/topbanner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"

        android:layout_margin="3dp" >

        
               <ImageView
            android:id="@+id/imgdvois"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_50dp"
           android:layout_alignParentRight="true"
          android:layout_marginRight="14dp"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="0dp"
      
            android:src="@drawable/myapp_logo" />
    </RelativeLayout>
    <!-- header user name here -->

    

    <!-- middle content starts here -->

    <LinearLayout
        android:id="@+id/llmiddle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/banner"
        android:layout_below="@+id/topbanner"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:padding="2dp"
        android:weightSum="10" >

        <RelativeLayout
        android:id="@+id/lluser_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgdvois"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_usertext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="6dp"
            android:text="" 
            android:textColor="@color/label_font_color"/>
        
     
    </RelativeLayout>
        <!-- middle content header starts here -->


        <!-- middle content header ends here -->


        <!-- middle content texts starts here -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="4.57"
            android:background="@drawable/roundededges2"
            android:orientation="vertical"
            android:weightSum="8" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:background="@color/bg_ionhome"
                android:orientation="horizontal"
                android:weightSum="6" >

                <TextView
                    android:id="@+id/TextView01"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Plan"
                    android:layout_gravity="center"
                    android:textColor="#000000"
                  android:layout_marginLeft="3dp"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/txtPackage"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                  android:gravity="right"
                    android:layout_weight="4"
                    android:layout_marginRight="3dp"
                    android:layout_gravity="center"
                    android:text=""
                    android:textColor="@color/label_font_color"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:background="@color/bg_ionhome"
                android:orientation="horizontal"
                android:weightSum="6" >

                <TextView
                    android:id="@+id/TextView02"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="@string/rupees_sign"
                    android:layout_marginLeft="3dp"
                    android:textColor="#000000"
                    android:layout_gravity="center"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/txtamount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_weight="4"
                    android:gravity="right"
                    android:layout_marginRight="3dp"
                    android:layout_gravity="center"
                    android:text=""
                    android:textColor="@color/label_font_color"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:background="@color/bg_ionhome"
                android:orientation="horizontal"
                android:weightSum="6" >

                <TextView
                    android:id="@+id/TextView03"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_marginLeft="3dp"
                    android:text="Validity"
                    android:layout_gravity="center"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/txtvalidity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="3dp"
                    android:layout_weight="4"
                    android:gravity="right"
                    android:text=""
                    android:layout_gravity="center"
                    android:textColor="@color/label_font_color"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:background="@color/bg_ionhome"
                android:orientation="horizontal"
                android:weightSum="6" >

                <TextView
                    android:id="@+id/TextView04"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Expiry Date"
                    android:layout_marginLeft="3dp"
                    android:layout_gravity="center"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#000000"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/txtpkgexpiry"
                    android:layout_width="0dp"
                    android:layout_marginRight="3dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_weight="4"
                    android:text=""
                    android:layout_gravity="center"
                    android:gravity="right"
                    android:textColor="@color/label_font_color"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- new Days Remening after Expry -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:background="@color/bg_ionhome"
                android:orientation="horizontal"
                android:weightSum="6" >

                <TextView
                    android:id="@+id/TextView05"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Days Remaining"
                    android:layout_marginLeft="3dp"
                    android:layout_gravity="center"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/label_font_color"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/txtdayremainig"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_weight="4"
                    android:text=""
                    android:layout_gravity="center"
                    android:gravity="right"
                   android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
           
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="2dp"
                android:layout_weight="3"
                android:gravity="center" >

                <LinearLayout
                    android:id="@+id/relativerenewal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center_horizontal"
                    android:weightSum="5"
                    android:background="@drawable/bg_pynow"
                    android:orientation="horizontal"
                    android:padding="15dp" >

                    <ImageView
                        android:id="@+id/img_pay_now"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                       android:layout_gravity="center"
                                           
                        android:src="@drawable/img_pynow" />

                    <TextView
                        android:id="@+id/tv_pay_now"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                       
                    	
                    	android:layout_gravity="center"
                    	android:textAppearance="?android:attr/textAppearanceMedium"
                    	android:layout_marginLeft="10dp"
                    	android:layout_marginRight="2dp"
                        android:text="Pay Now"
                        android:textSize="@dimen/pay_now_lable" />
                </LinearLayout>
            </LinearLayout>

           
        </LinearLayout>
        <!-- middle content texts ends here -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginTop="4dp"
            android:layout_weight="5"
            android:orientation="vertical"
            android:weightSum="6" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="3"
                android:orientation="horizontal"
                android:weightSum="3" >

                <LinearLayout
                    android:id="@+id/relativepaymenthistory"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:weightSum="5"
                    android:gravity="center"
                    android:background="@drawable/bg_com_bottom"
                    android:orientation="vertical"
                    android:padding="4dp" >

                    <ImageView
                        android:id="@+id/imgnew_renewal"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                       
                        android:padding="3dp"
                        android:layout_gravity="center"
                        android:layout_weight="3.5"
                        android:src="@drawable/img_renewal" />

                    <TextView
                        android:id="@+id/tv_renewal"
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                     
                        android:gravity="center"
                        android:layout_weight="1.5"
                        android:layout_gravity="center"
                        android:singleLine="true"
                        android:text="Renewal History "
                        android:textSize="11sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/relativedatausage"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                     android:weightSum="5"
                     android:gravity="center"
                     android:orientation="vertical"
                    android:background="@drawable/bg_com_bottom"
                    android:padding="4dp" >

                    <ImageView
                        android:id="@+id/img_datausage"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="3.5"
                        android:layout_gravity="center"                       
                        android:padding="3dp"
                        android:src="@drawable/img_datausage" />

                    <TextView
                        android:id="@+id/tv_datausage"
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                         android:layout_gravity="center"
                      
                        android:gravity="center"
                        android:layout_weight="1.5"
                        android:text="Data Usage "
                        android:textSize="11sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/relativepickuprequest"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:weightSum="5"
                    android:gravity="center"
                    android:background="@drawable/bg_com_bottom"
                    android:orientation="vertical"
                    android:padding="4dp" >

                    <ImageView
                        android:id="@+id/img_pickup"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                   
                        android:padding="4dp"
                        android:layout_gravity="center"
                        android:layout_weight="3.5"
                        android:src="@drawable/img_pickup" />

                    <TextView
                        android:id="@+id/tv_pickup_req"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1.5"
                    
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:text="PickUp Request"
                        android:textSize="10sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:layout_weight="3"
              
                android:orientation="horizontal"
                android:weightSum="3" >

                <LinearLayout
                    android:id="@+id/relativeoffer"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:weightSum="5"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="@drawable/bg_com_bottom"
                    android:padding="1dp"
                    android:paddingTop="3dp" >

                    <ImageView
                        android:id="@+id/img_special"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="3.5"
                        android:layout_gravity="center"
                   
                        android:padding="4dp"
                        android:src="@drawable/img_specialoffer" />

                    <TextView
                        android:id="@+id/tv_special_offer"
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.5"
                        android:layout_gravity="center"
                        
                        android:gravity="center"
                        android:text="Special Offer"
                        android:textSize="10sp" />
                </LinearLayout>

                <LinearLayout
                   
                    android:id="@+id/relativeupgradepdackage"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_com_bottom"
                    android:padding="1dp"
                    android:weightSum="5"
                    android:orientation="vertical"
                    android:paddingTop="3dp" >

                    <ImageView
                        android:id="@+id/img_explore_plans"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_weight="3.5"
                        
                        android:padding="4dp"
                        android:src="@drawable/create_plan" />

                    <TextView
                        android:id="@+id/tv_explore_plan"
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_weight="1.5"
                        android:gravity="center"
                        android:text="Create Your Plan"
                        android:textSize="11sp" />
                </LinearLayout>

                <LinearLayout
                   
                    android:id="@+id/relativeservicerequest"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_com_bottom"
                    android:padding="1dp"
                    android:weightSum="5"
                    android:orientation="vertical"
                    
                    android:paddingTop="3dp" >

                    <ImageView
                        android:id="@+id/img_servicereq"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
            
                        android:layout_gravity="center"
                        android:layout_weight="3.5"
               
                        android:padding="4dp"
                        android:src="@drawable/img_servicerequest" />

                    <TextView
                        android:id="@+id/tv_service_req"
                        android:layout_width="fill_parent"
                        android:layout_weight="1.5"
                        android:layout_gravity="center"
                        android:layout_height="0dp"
                      
                        android:gravity="center"
                        android:text="Service Request"
                        android:textSize="10sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <!-- middle content ends here -->


    <!-- footer starts here -->

    <LinearLayout
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/footer_act_bg"
        android:gravity="center"
        android:weightSum="4" >

        <LinearLayout
            android:id="@+id/inn_banner_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/footer_dectv_bg"
            android:clickable="true" >

            <ImageView
                android:id="@+id/btnhome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/footer_home" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/footer_divider" />

        <LinearLayout
            android:id="@+id/inn_banner_profile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:clickable="true"
            
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/btnprofile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/footer_profile" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/footer_divider" />

        <LinearLayout
            android:id="@+id/inn_banner_notification"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/btnnotification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/footer_arlrts" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/footer_divider" />

        <LinearLayout
            android:id="@+id/inn_banner_help"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/btnhelp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/footer_hepl" >
            </ImageView>
        </LinearLayout>
    </LinearLayout>
    <!-- footer ends here -->

</RelativeLayout>