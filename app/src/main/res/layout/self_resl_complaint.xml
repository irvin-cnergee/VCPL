<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    
    android:background="#FFFFFF">
    
    
    
    

        >
    <TextView
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="15sp"
        
        android:layout_marginTop="10dp"
        android:paddingLeft="5dp"
        android:text=" Complaint "
        android:textColor="#000000"/>
    
    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        
        android:background="@color/label_black_color"/>
    
    
    <TextView
        
        android:id="@+id/textdob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="15sp"
        android:layout_marginTop="3dp"
       android:text=" "
        android:textColor="#000000"/>
    
    
    
    <TextView
        
                        android:id="@+id/spinnerListt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:padding="10dp"
                        android:spinnerMode="dialog" 
                        android:background="@drawable/editextlayout"
                        android:text="No Connectivity" />
    
    
        <EditText
                   
                        android:id="@+id/commentss"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/editextlayout"                		
                        android:hint="Please enter your comment"
                        android:inputType="textMultiLine"
                        android:lines="3"
                      android:layout_marginTop="4dp"
                        android:textSize="14sp" />

     <LinearLayout
         android:id="@+id/compl_profile"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
      android:layout_margin="30dp"
         android:layout_gravity="center"
         android:orientation="horizontal"
         android:weightSum="4" >

         <Button
             android:id="@+id/btn_okk"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_gravity="center_horizontal"
             android:layout_weight="2"
             android:padding="2dp"
           	android:layout_marginRight="4dp"
           	android:background="@drawable/btn_selector"
             android:text="OK"
             android:textColor="@color/label_white_color"
             android:textSize="15sp" />

         <Button
             android:id="@+id/btn_cancell"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_gravity="center"
             android:layout_weight="2"
             android:padding="2dp"
             android:layout_marginLeft="4dp"
             android:background="@drawable/btn_selector"
             android:text="CANCEL"
             android:textColor="@color/label_white_color"
             android:textSize="15sp" />
     </LinearLayout>

</LinearLayout>