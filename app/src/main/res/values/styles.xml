<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="android:Theme.Light.NoTitleBar" />

    <style name="NoActionBar" parent="@android:style/Theme.Holo.Light">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>

        <item name="colorPrimary">@color/label_orange_color</item>
        <item name="colorPrimaryDark">@color/label_orange_color</item>
        <item name="colorAccent">@android:color/black</item>
        <item name="android:textViewStyle">@style/MyTextViewStyle</item>
        <item name="android:editTextStyle">@style/MyEditTextStyle</item>
        <item name="android:radioButtonStyle">@style/MyRBStyle</item>
        <item name="colorControlNormal">@android:color/black</item>
    </style>

    <style name="AppBtn" parent="@android:style/Widget.Button">
        <item name="android:height">@dimen/AppBtnHeight</item>
        <item name="android:width">@dimen/AppBtnWidth</item>
        <item name="android:layout_marginTop">@dimen/AppBtnMarginTop</item>
        <item name="android:background">@drawable/app_botton</item>
        <item name="android:layout_marginLeft">@dimen/AppBtnMarginLeft</item>
        <item name="android:layout_marginRight">@dimen/AppBtnMarginRight</item>

    </style>

    <style name="AppThemeAppCompact" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/label_orange_color</item>
        <item name="colorPrimaryDark">@color/label_orange_color</item>
        <item name="colorAccent">@android:color/black</item>
        <item name="android:textViewStyle">@style/MyTextViewStyle</item>
        <item name="android:editTextStyle">@style/MyEditTextStyle</item>
        <item name="android:radioButtonStyle">@style/MyRBStyle</item>
        <item name="colorControlNormal">@android:color/black</item>
    </style>




    <dimen name="AppBtnHeight">40dp</dimen>
    <dimen name="AppBtnWidth">102dp</dimen>
    <dimen name="AppBtnMarginTop">20dp</dimen>
    <dimen name="AppBtnMarginLeft">5dp</dimen>
    <dimen name="AppBtnMarginRight">5dp</dimen>

    <style name="Widget.GifMoviewView" parent="@android:style/Widget"></style>


    <style name="Widget.ProgressBar.CircularProgressBar" parent="@android:style/Widget">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="progressColor">@color/color_red</item>
        <item name="hasShadow">true</item>
        <item name="titleColor">@color/color_red</item>
        <item name="subtitleColor">@color/color_red</item>
<!--        <item name="strokeWidth">10dp</item>-->

    </style>

    <style name="Widget.ProgressBar.Holo.CircularProgressBar" parent="Widget.ProgressBar.CircularProgressBar">
        <item name="hasShadow">true</item>
<!--        <item name="strokeWidth">@dimen/dimen_25dp</item>-->
    </style>

    <style name="ProgressHUD" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>




    <style name="SpinnerAppTheme" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/apptheme_spinner_background_holo_light</item>
        <item name="android:dropDownSelector">@drawable/apptheme_list_selector_holo_light</item>
    </style>

    <style name="SpinnerDropDownItemAppTheme" parent="android:Widget.DropDownItem.Spinner">
        <item name="android:checkMark">@drawable/apptheme_btn_radio_holo_light</item>
    </style>
    <style name="MyTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="MyEditTextStyle" parent="android:Widget.EditText">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorHint">@android:color/black</item>
    </style>

    <style name="MyRBStyle" parent="android:Widget.CompoundButton.RadioButton">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:buttonTint">@android:color/black</item>
    </style>
</resources>